# Network Pinpointer - Environment Configuration
# Copy this file to .env and customize for your environment
# 
# Quick start:
#   cp .env.example .env
#   nano .env  # Edit values
#   docker-compose up -d

# ============================================================================
# GENERAL SETTINGS
# ============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Log level (debug, info, warning, error, critical)
LOG_LEVEL=info

# Skip first-run wizard (set to 1 to skip)
SKIP_FIRST_RUN=0

# ============================================================================
# API SERVER SETTINGS
# ============================================================================

# Enable API server
ENABLE_API=true

# API server port
API_PORT=8080

# API key for authentication (leave empty to disable)
API_KEY=

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ============================================================================
# DATABASE - InfluxDB (Time-Series Data)
# ============================================================================

# InfluxDB connection
INFLUXDB_URL=http://influxdb:8086
INFLUXDB_ORG=network-pinpointer
INFLUXDB_BUCKET=semantic_data

# InfluxDB authentication token
# IMPORTANT: Change this in production!
INFLUXDB_TOKEN=changeme_generate_secure_token

# InfluxDB admin password (for initialization)
INFLUXDB_PASSWORD=changeme123

# Data retention period
INFLUXDB_RETENTION=30d

# ============================================================================
# DATABASE - PostgreSQL (Long-Term Storage)
# ============================================================================

# PostgreSQL connection
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=network_pinpointer
POSTGRES_USER=netpin

# PostgreSQL password
# IMPORTANT: Change this in production!
POSTGRES_PASSWORD=changeme123

# ============================================================================
# CACHE - Redis
# ============================================================================

# Redis connection
REDIS_HOST=redis
REDIS_PORT=6379

# Redis password
# IMPORTANT: Change this in production!
REDIS_PASSWORD=changeme123

# Cache TTL (seconds)
REDIS_TTL=3600

# ============================================================================
# MONITORING - Grafana
# ============================================================================

# Grafana admin credentials
# IMPORTANT: Change these in production!
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin123

# Grafana server URL
GRAFANA_URL=http://localhost:3000

# ============================================================================
# MONITORING - Prometheus
# ============================================================================

# Prometheus retention period
PROMETHEUS_RETENTION=30d

# ============================================================================
# ALERTING
# ============================================================================

# Slack webhook URL (optional)
SLACK_WEBHOOK=

# Email alerts (optional)
ALERT_EMAIL=
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=network-pinpointer@example.com

# PagerDuty integration (optional)
PAGERDUTY_KEY=

# ============================================================================
# NETWORK SETTINGS
# ============================================================================

# Default network type (home, enterprise, datacenter, cloud)
NETWORK_TYPE=enterprise

# Monitoring interval (seconds)
MONITORING_INTERVAL=300

# Default scan timeout (seconds)
SCAN_TIMEOUT=30

# Maximum concurrent scans
MAX_CONCURRENT_SCANS=10

# ============================================================================
# LJPW BASELINES
# ============================================================================

# Default LJPW baseline profile (balanced, connectivity-focused, security-focused, performance-focused)
DEFAULT_BASELINE=balanced

# Custom baseline coordinates (leave empty to use profile)
BASELINE_LOVE=
BASELINE_JUSTICE=
BASELINE_POWER=
BASELINE_WISDOM=

# ============================================================================
# PACKET CAPTURE
# ============================================================================

# Enable packet capture (requires scapy and appropriate permissions)
ENABLE_PACKET_CAPTURE=true

# Packet capture interface (leave empty for auto-detect)
CAPTURE_INTERFACE=

# Maximum packets to capture per session
MAX_PACKETS=1000

# Capture buffer size (MB)
CAPTURE_BUFFER_MB=100

# ============================================================================
# SECURITY
# ============================================================================

# Enable rate limiting
ENABLE_RATE_LIMITING=true

# Rate limit: requests per second
RATE_LIMIT_PER_SECOND=10

# Rate limit: burst size
RATE_LIMIT_BURST=20

# Enable IP whitelist (comma-separated)
IP_WHITELIST=

# Enable IP blacklist (comma-separated)
IP_BLACKLIST=

# JWT secret for API authentication (generate a secure random string)
JWT_SECRET=changeme_generate_secure_random_string_here

# JWT expiration (seconds)
JWT_EXPIRATION=3600

# ============================================================================
# FEATURES FLAGS
# ============================================================================

# Enable experimental features
ENABLE_EXPERIMENTAL=false

# Enable debug mode (verbose logging)
DEBUG=false

# Enable profiling
ENABLE_PROFILING=false

# Enable automatic updates check
CHECK_FOR_UPDATES=true

# ============================================================================
# DOCKER NETWORK
# ============================================================================

# Docker network subnet (used in docker-compose.yml)
DOCKER_SUBNET=172.20.0.0/16

# ============================================================================
# BACKUP & MAINTENANCE
# ============================================================================

# Automatic backup enabled
ENABLE_BACKUPS=true

# Backup retention days
BACKUP_RETENTION_DAYS=30

# Backup location
BACKUP_PATH=/app/backups

# Automatic cleanup of old data
ENABLE_CLEANUP=true

# Data retention days (for automatic cleanup)
DATA_RETENTION_DAYS=90

# ============================================================================
# NOTES
# ============================================================================
#
# Security Best Practices:
# 1. Change ALL default passwords before deploying to production
# 2. Use strong, randomly generated passwords (use: openssl rand -base64 32)
# 3. Never commit .env file to version control
# 4. Rotate secrets regularly
# 5. Use environment-specific .env files (.env.production, .env.staging)
# 6. Restrict file permissions: chmod 600 .env
#
# Generate secure tokens:
#   openssl rand -base64 32
#   python3 -c "import secrets; print(secrets.token_urlsafe(32))"
#
# For production deployment:
# - Use a secrets management service (AWS Secrets Manager, HashiCorp Vault, etc.)
# - Enable SSL/TLS for all services
# - Configure firewall rules
# - Set up monitoring and alerts
# - Regular security audits
#
# ============================================================================
